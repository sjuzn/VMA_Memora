<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/milestoneParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test">


    <TextView
        android:id="@+id/ktoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="AA a BB"
        android:textColor="@color/cervena_tmava"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/coAkedyText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/coAkedyText"
        android:paddingStart="30dp"
        android:paddingBottom="4dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Tu je opis co sa stalo a kedy | 12.7.2024"
        app:layout_constraintBottom_toTopOf="@+id/kolkoUbehlo"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/kolkoUbehlo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingBottom="150dp"
        android:text="150 dni"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>
