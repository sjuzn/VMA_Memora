<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moments.ui.AddMomentActivity"
    android:background="@drawable/poadie_abstract"
    >

    <LinearLayout
        android:id="@+id/linearLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderbottom"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:padding="10dp"
            android:stateListAnimator="@null"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_moment"
            android:textSize="35sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutHeader"
        android:padding="40dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/bTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_milestones"
            android:drawableLeft="@drawable/milestones_smaller"
            android:gravity="start|center_vertical"
            android:hint="@string/title"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bText"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:hint="@string/notes"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/pencil_smaller"
            android:gravity="start|center_vertical"
            android:background="@drawable/button_milestones" />

        <Button
            android:id="@+id/bPhoto"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:hint="@string/select_picture"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/moments_smaller"
            android:gravity="start|center_vertical"
            android:background="@drawable/button_milestones" />

        <Button
            android:id="@+id/bDate"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:hint="@string/select_the_date"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/calendar_smaller"
            android:gravity="start|center_vertical"
            android:background="@drawable/button_milestones"
            android:backgroundTint="@color/cervena_tmava_zosvetlena"/>

        <Button
            android:id="@+id/bMap"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:hint="@string/select_place"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/map"
            android:gravity="start|center_vertical"
            android:background="@drawable/button_milestones"
            android:backgroundTint="@color/cervena_tmava_zosvetlena"/>

        <Button
            android:id="@+id/bTags"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:hint="@string/add_tags"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/tag"
            android:gravity="start|center_vertical"
            android:background="@drawable/button_milestones"
            android:backgroundTint="@color/cervena_tmava_zosvetlena"/>

        <Button
            android:id="@+id/btSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_margin="20dp"
            android:backgroundTint="@color/cervena_tmava"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>