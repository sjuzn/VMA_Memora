<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First Shadow Layer -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#22000000"/> <!-- Light shadow color -->
        </shape>
    </item>

    <!-- Second Shadow Layer -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#44000000"/> <!-- Medium shadow color -->
        </shape>
    </item>

    <!-- Third Shadow Layer -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#66000000"/> <!-- Dark shadow color -->
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="@android:color/white"/> <!-- Background color -->
        </shape>
    </item>
</layer-list>
